{
    "name": "pokemon-viewer",
    "version": "1.0.0",
    "description": "Frontend to visualize PokeAPI data.",
    "type": "module",
    "private": true,
    "sideEffects": false,
    "scripts": {
        "dev": "vinxi dev",
        "build": "vinxi build",
        "start": "vinxi start",
        "prepare": "husky",
        "pre-commit": "npm run lint && npm run lint:types && npm test",
        "lint": "npm run lint:rules && npm run lint:format",
        "lint:types": "tsc --noEmit",
        "lint:format": "npx biome format --error-on-warnings ./",
        "lint:rules": "npx biome lint --error-on-warnings ./",
        "fix": "npm run fix:format && npm run fix:lint",
        "fix:format": "npx biome format --write ./",
        "fix:lint": "npx biome lint --write ./",
        "test": "vitest run --silent",
        "test:watch": "vitest",
        "plop": "plop",
        "storybook": "storybook dev -p 6006 -c testing/.storybook",
        "build-storybook": "storybook build -c testing/.storybook",
        "test-storybook": "test-storybook -c testing/.storybook"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@radix-ui/react-accordion": "^1.2.1",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-dropdown-menu": "^2.1.2",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-navigation-menu": "^1.2.1",
        "@radix-ui/react-select": "^2.1.2",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.3",
        "@radix-ui/react-visually-hidden": "^1.1.0",
        "@tanstack/react-query": "^5.59.0",
        "@tanstack/react-query-devtools": "^5.59.0",
        "@tanstack/react-router": "^1.58.17",
        "@tanstack/react-router-with-query": "^1.58.17",
        "@tanstack/router-devtools": "^1.58.17",
        "@tanstack/router-vite-plugin": "^1.81.9",
        "@tanstack/router-zod-adapter": "^1.74.4",
        "@tanstack/start": "^1.58.16",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "embla-carousel-autoplay": "^8.3.0",
        "embla-carousel-react": "^8.3.0",
        "framer-motion": "^11.11.17",
        "katex": "^0.16.11",
        "lucide-react": "^0.447.0",
        "pokemon-sprites": "github:PokeAPI/sprites",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "recharts": "^2.13.0",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7",
        "vinxi": "^0.4.3",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.3",
        "@chromatic-com/storybook": "^1.9.0",
        "@storybook/addon-coverage": "^1.0.4",
        "@storybook/addon-essentials": "^8.3.6",
        "@storybook/addon-interactions": "^8.3.6",
        "@storybook/addon-links": "^8.3.6",
        "@storybook/addon-onboarding": "^8.3.6",
        "@storybook/addon-themes": "^8.3.6",
        "@storybook/blocks": "^8.3.6",
        "@storybook/builder-vite": "^8.3.6",
        "@storybook/react": "^8.3.6",
        "@storybook/react-vite": "^8.3.6",
        "@storybook/test": "^8.3.6",
        "@storybook/test-runner": "^0.19.1",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.1",
        "@types/katex": "^0.16.7",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.2",
        "@vitest/coverage-istanbul": "^2.1.2",
        "autoprefixer": "^10.4.20",
        "husky": "^9.1.6",
        "jsdom": "^25.0.1",
        "lint-staged": "^15.2.10",
        "plop": "^4.0.1",
        "postcss": "^8.4.47",
        "storybook": "^8.3.6",
        "tailwindcss": "^3.4.13",
        "typescript": "^5.6.2",
        "vite-tsconfig-paths": "^5.0.1",
        "vitest": "^2.1.2"
    },
    "overrides": {
        "dependencies": {
            "react-dom": "0.0.0-experimental-035a41c4e-20230704"
        }
    },
    "lint-staged": {
        "*.+(ts|tsx)": ["npm run lint", "bash -c 'npm run lint:types'"],
        "*.test.+(ts|tsx)": ["npm test"],
        "*.json": "npm run lint:format"
    }
}
